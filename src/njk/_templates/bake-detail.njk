{% extends '_templates/base.njk' %}
{% set relative_path = "../" %}

{% block page_title %}{{ name }}{% endblock %}

{% block page_description %}{{ description }} by the Austin Local{% endblock %}

{% block content %}
  <article class="container">
    <div class="row">
      <div class="col-md-7">
        <h1>{{ name }}</h1>
        <p>{{ description }}</p>
        <p>{{ hours }}</p>
        <p>{{ address }}</p>
      </div>
      <div class="col-md-5">
        <img src="../img/{{ image_front }}" alt="" class="img-fluid mb-4">
        <p>{{ website }}</p>
        <p>{{ phone }}</p>
      </div>
    </div>
  </div>
  </article>
{% endblock %}